<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.presentationController.HotelListuiController">
   <top>
      <HBox alignment="CENTER" prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="酒店列表">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="450.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="50.0" prefWidth="800.0" spacing="20.0">
               <children>
                  <CheckBox fx:id="ReservationCheckbox" mnemonicParsing="false" onAction="#CheckhotelClicked" text="曾经预定">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </CheckBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="10.0" />
               </padding>
            </HBox>
            <TableView fx:id="Hoteltable" prefHeight="400.0" prefWidth="800.0">
              <columns>
                <TableColumn fx:id="HotelName" minWidth="-1.0" prefWidth="162.0" text="酒店名" />
                <TableColumn fx:id="HotelStar" minWidth="100.0" prefWidth="184.0" text="星级(点击按星级排序)" />
                  <TableColumn fx:id="HotelScore" minWidth="100.0" prefWidth="169.0" text="评分(点击按评分排序)" />
                  <TableColumn fx:id="HotelPrice" minWidth="100.0" prefWidth="159.0" text="价格(点击按价格排序)" />
                  <TableColumn fx:id="Reservation" prefWidth="191.0" text="是否预定" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="800.0" spacing="500.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#CheckButtonClicked" prefHeight="50.0" text="查看酒店具体信息">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="ReturnButton" mnemonicParsing="false" onAction="#ReturnButtonClicked" prefHeight="50.0" prefWidth="100.0" text="返回">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets right="20.0" />
         </opaqueInsets>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
